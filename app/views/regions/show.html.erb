<div id="container">
  <div id="regionshow">
    <h2>Welcome to <%= @region.name %>!</h2>
    <% if current_user.region == @region %>
      <p>(You're looking here)</p>
    <% end %>
    
    <br />
    <h3>Members</h3>
    <ul id="regionmemberlist">
      <% @users.each do |user| %>
        <% if user != current_user %>
          <li><%= link_to user.email, user_path(user) %></li>
        <% end %>
      <% end %>
    </ul>
  <br />
    <%= render "regions/join_button", region: @region %>
    <br />
    <img id="cityshow" src="/assets/zombie_apocalypse.jpg" alt="Zombie Apocalypse">
  </div>
</div>

